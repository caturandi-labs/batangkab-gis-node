<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    
    <link rel="stylesheet" href="/css/font-awesome.css">
    <link rel="stylesheet" href="/css/ionicons.css">
    <link rel="stylesheet" href="/css/perfect-scrollbar.css">
    <link rel="stylesheet" href="/plugin/datatables/jquery.dataTables.css">
    <link rel="stylesheet" href="/plugin/datatables-responsive/responsive.dataTables.css">
    <script src="/js/jquery.js"></script>
    <script src="/plugin/datatables/jquery.dataTables.js"></script>
    <script src="/plugin/datatables-responsive/dataTables.responsive.js"></script>
    <link rel="stylesheet" href="/css/shamcey.css">
    <title>{{ title }} | Backend Batang Project</title>
</head>

<body>


    <div class="sh-logopanel">
        <img src="/images/logo.png" class="sh-logo-img" alt="Logo" width="45">
        <a href="" class="sh-logo-text">City Guide</a>
        <a id="navicon" href="" class="sh-navicon d-none d-xl-block">
            <i class="icon ion-navicon"></i>
        </a>
        <a id="naviconMobile" href="" class="sh-navicon d-xl-none">
            <i class="icon ion-navicon"></i>
        </a>
    </div>
    <!-- sh-logopanel -->
    

    {{!-- Sidenav --}}
    {{> _sidenav}}

    <div class="sh-headpanel">
        
        <!-- sh-headpanel-left -->

        <div class="sh-headpanel-right">
            <div class="dropdown dropdown-profile">
                <a href="" data-toggle="dropdown" class="dropdown-link">
                    {{!-- <img src="../img/img1.jpg" class="wd-60 rounded-circle" alt=""> --}}
                    <i class="fa fa-user-circle fa-2x" aria-hidden="true"></i> {{user}}
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <ul class="dropdown-profile-nav">
                        <li>
                            <a href="/users/logout">
                            <i class="icon ion-power"></i>Logout</a>
                        </li>
                    </ul>
                </div>
                <!-- dropdown-menu -->
            </div>
        </div>
        <!-- sh-headpanel-right -->
    </div>
    <!-- sh-headpanel -->

    <div class="sh-mainpanel">
        <div class="sh-breadcrumb">
            <nav class="breadcrumb">
                <a class="breadcrumb-item" href="/">Dashboard</a>
                <span class="breadcrumb-item active">{{ breadcrumb_active }}</span>
            </nav>
        </div>
        <!-- sh-breadcrumb -->
        <div class="sh-pagetitle" style="flex-direction: row">
            <!-- input-group -->
            <div class="sh-pagetitle-left">
                <div class="sh-pagetitle-icon">
                    {{#if icon_heading}}
                        {{{icon_heading}}}
                    {{else}}
                        <i class="icon ion-grid"></i>
                    {{/if}}
                    
                </div>
                <div class="sh-pagetitle-title">
                    <h2>{{ page_heading }}</h2>
                </div>
                <!-- sh-pagetitle-left-title -->
            </div>
            <!-- sh-pagetitle-left -->
            {{{link_tambah}}}
        </div>
        <!-- sh-pagetitle -->

        <div class="sh-pagebody">
            <div class="container">
                {{> _msg}}
                {{> _errors}}
                {{{body}}}
            </div>
        </div>
        <!-- sh-pagebody -->
    </div>
    <!-- sh-mainpanel -->



    {{!-- JS CODE --}}
    
    <script src="/js/popper.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/perfect-scrollbar.jquery.js"></script>
    <script src="/js/shamcey.js"></script>

    <script>

        $(document).ready(()=>{
            $('#datatable1').DataTable({
              responsive: true,
              language: {
                searchPlaceholder: 'Pencarian...',
                sSearch: '',
              }
            });

        });
       

    </script>
</body>

</html>